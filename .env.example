# Django settings
SECRET_KEY=your-secret-key
DEBUG=True
ALLOWED_HOSTS=*

# API Keys
CHART_IMG_API_KEY=your-chart-img-api-key

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432

# Service URLs
CTRADER_API_BASE_URL=http://192.168.1.102:7999
MT5_API_BASE_URL=http://host.docker.internal:8001

# Logging
LOG_DIR=logs

# TradingView
TV_USERNAME=your_tv_username
TV_PASSWORD=your_tv_password

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OANDA
OANDA_ACCESS_TOKEN=your-oanda-access-token
OANDA_ENVIRONMENT=practice

# Other
CTRADER_TOKEN_STORAGE=ctrader_tokens.json
BACKEND_URL="http://localhost:8000"

# RabbitMQ (MT5 messaging bus)
# When running INSIDE docker containers use the service name 'rabbitmq':
AMQP_URL=amqp://guest:guest@rabbitmq:5672//
# When running manage.py locally on the HOST, override to:
# AMQP_URL=amqp://guest:guest@localhost:5672//
AMQP_EVENTS_EXCHANGE=mt5.events
AMQP_COMMANDS_EXCHANGE=mt5.commands