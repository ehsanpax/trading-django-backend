{
  "info": {
    "_postman_id": "c7c9f1b9-7c3b-4d6d-8e5a-9f8b12345678",
    "name": "Trading Backend - Trace & Explain",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for trace and explain endpoints. Set variables: baseUrl, token, runId, bar_index."
  },
  "item": [
    {
      "name": "Get Backtest Trace",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Token {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/backtest-runs/{{runId}}/trace?bar_index={{bar_index}}&limit=50",
          "host": ["{{baseUrl}}"],
          "path": ["backtest-runs", "{{runId}}", "trace"],
          "query": [
            { "key": "bar_index", "value": "{{bar_index}}" },
            { "key": "limit", "value": "50" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Backtest Explain",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Token {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/backtest-runs/{{runId}}/explain?bar_index={{bar_index}}",
          "host": ["{{baseUrl}}"],
          "path": ["backtest-runs", "{{runId}}", "explain"],
          "query": [
            { "key": "bar_index", "value": "{{bar_index}}" }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000/api/bots" },
    { "key": "token", "value": "" },
    { "key": "runId", "value": "" },
    { "key": "bar_index", "value": "5" }
  ]
}
